<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".client.datas.profile.ClientInformationFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp">
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/relative">

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="@string/label_personal_information"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"/>
        </RelativeLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="10dp"
            android:background="@color/colorViewSeparator"
            android:layout_below="@+id/relative"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/linear_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:padding="10dp"
                    >

                    <ImageView
                        android:id="@+id/ic_person"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_person_black_24dp"
                        app:layout_constraintBottom_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="parent"
                        />

                    <TextView
                        android:id="@+id/label_name"
                        android:layout_width="0dp"
                        android:layout_marginLeft="8dp"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_height="wrap_content"
                        android:text="@string/label_client_name"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintBottom_toTopOf="@+id/txt_client_name"
                        app:layout_constraintLeft_toRightOf="@+id/ic_person"/>
                    <TextView
                        android:id="@+id/txt_client_name"
                        android:layout_width="0dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/label_name"
                        app:layout_constraintLeft_toRightOf="@+id/ic_person"
                        app:layout_constraintTop_toBottomOf="@+id/label_name"
                        />
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1px"
                        android:background="@color/colorViewSeparator"
                        app:layout_constraintStart_toStartOf="@+id/label_name"
                        app:layout_constraintTop_toBottomOf="@+id/txt_client_name"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/linear_surname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linear_name"
                    android:layout_marginTop="15dp"
                    android:padding="10dp"
                    >

                    <ImageView
                        android:id="@+id/ic_person1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_person_black_24dp"
                        app:layout_constraintBottom_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="parent"
                        />

                    <TextView
                        android:id="@+id/label_surname"
                        android:layout_width="0dp"
                        android:layout_marginLeft="8dp"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_height="wrap_content"
                        android:text="@string/label_client_surname"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintBottom_toTopOf="@+id/txt_client_surname"
                        app:layout_constraintLeft_toRightOf="@+id/ic_person1"/>
                    <TextView
                        android:id="@+id/txt_client_surname"
                        android:layout_width="0dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/label_surname"
                        app:layout_constraintLeft_toRightOf="@+id/ic_person1"
                        app:layout_constraintTop_toBottomOf="@+id/label_surname"
                        />
                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="1px"
                        android:background="@color/colorViewSeparator"
                        app:layout_constraintStart_toStartOf="@+id/label_surname"
                        app:layout_constraintTop_toBottomOf="@+id/txt_client_surname"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/linear_surname"
                    android:id="@+id/btn_next"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/rounded_button"
                    android:text="@string/button_next"
                    android:layout_marginBottom="20dp"/>


            </RelativeLayout>

        </ScrollView>

    </RelativeLayout>
</FrameLayout>